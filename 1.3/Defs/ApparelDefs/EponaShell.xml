    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers Inherit="false">
        <li>EponaBuildingTailor</li>

      </recipeUsers>
      <researchPrerequisite>Epona_Research_AdvancedSewing</researchPrerequisite>
    </recipeMaker>
    <thingCategories>
      <li>Epona_Apparel</li>
