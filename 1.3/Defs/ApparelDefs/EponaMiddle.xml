<Defs>
	
<ThingDef ParentName="ApparelMakeableBase">
    <defName>Epona_Apparel_BreastPlate</defName>
    <label>에포나 흉갑</label>
    <description>납탄을 막기에 충분한 흉갑입니다.</description>
    <graphicData>
      <texPath>Things/Apparel/EponaPlateBreast/EponaPlateBreast</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>170</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>Epona_Apparel</li>
    </thingCategories>
    <recipeMaker>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <recipeUsers Inherit="false">
        <li>EponaBuildingForge</li>
        <li>EponaBuildingBombForge</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
	  <MaxHitPoints>260</MaxHitPoints>
	  <WorkToMake>28000</WorkToMake>
      <Mass>6</Mass>
      <StuffEffectMultiplierArmor>0.8</StuffEffectMultiplierArmor>
	  <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
	  <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
	  <Insulation_Cold>5</Insulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
		<equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
		</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/EponaPlateBreast/EponaPlateBreast</wornGraphicPath>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>EponaWarrior</li>
        <li>EponaPlate</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  
