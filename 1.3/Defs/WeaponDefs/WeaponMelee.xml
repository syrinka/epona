    <tendable>true</tendable>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>600~1200</disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef ParentName="EponaAPBase">
    <defName>EponaAP</defName>
    <label>취약!</label>
    <description>33퍼센트 더 많은 데미지를 받습니다.</description>
    <stages>
      <li>
        <label>취약</label>
        <statOffsets>
          <IncomingDamageFactor>0.33</IncomingDamageFactor>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>무너짐</label>
        <statOffsets>
          <IncomingDamageFactor>0.33</IncomingDamageFactor>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
