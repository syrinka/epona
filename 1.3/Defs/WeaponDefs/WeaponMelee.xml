    <hediff>Stab</hediff>
    <additionalHediffs>
      <li>
        <hediff>EponaAP</hediff>
        <severityPerDamageDealt>1</severityPerDamageDealt>
        <victimSeverityScalingByInvBodySize>false</victimSeverityScalingByInvBodySize>
